
@{
    ViewBag.Title = "EditProduct";
}
<img src="~/Content/lucci_logo.jpg" alt="Lucci Logo" height="50" width="120" />
<h3>Chỉnh sửa sản phẩm</h3>
<table class="table table-hover">
    <tr>
        <th>Mã</th>
        <th>Tên</th>
        <th>Số lượng</th>
        <th>Đơn giá</th>
        <th>Thương hiệu</th>
    </tr>
    <tr>
        <td>6KBS20S002</td>
        <td>Chân váy nữ</td>
        <td>0</td>
        <td>349.000VNĐ</td>
        <td>Canifa</td>
    </tr>
    <tr>
        <td>8TS20S021</td>
        <td>Áo phông nam</td>
        <td>10</td>
        <td>299.000VNĐ</td>
        <td>Canifa</td>
    </tr>
    <tr>
        <td>6BJ20S003</td>
        <td>Quần jeans nữ</td>
        <td>20</td>
        <td>399.000VNĐ</td>
        <td>Canifa</td>
    </tr>
</table>

<form>
    <div class="form-group">
        <label for="exampleInputCode">Mã</label>
        <input type="text" class="form-control" id="exampleInputCode" placeholder="Code">
    </div>
    <div class="form-group">
        <label for="exampleInputName">Tên</label>
        <input type="text" class="form-control" id="exampleInputName" placeholder="Name">
    </div>
    <div class="form-group">
        <label for="exampleInputAmount">Số lượng</label>
        <input type="number" class="form-control" id="exampleInputAmount" placeholder="Amount">
    </div>
    <div class="form-group">
        <label for="exampleInputPrice">Giá</label>
        <input type="text" class="form-control" id="exampleInputPrice" placeholder="Price">
    </div>
    <div class="form-group">
        <label for="exampleInputTrademark">Thương hiệu</label>
        <input type="text" class="form-control" id="exampleInputTrademark" placeholder="Trademark">
    </div>
    <button type="submit" class="btn btn-default" onclick="alert('Bạn có muốn chỉnh sửa?')">Edit</button>
</form>


